{% extends 'base.html.twig' %}

{% block body %}
<h1>Connexion !</h1>
<form action="{{path('security_login')}}" method="post">
    <div class="form-group">
        <input type="text" name="_username" class="form-control" placeholder="Adresse email ..." required>
    </div>
     <div class="form-group">
        <input type="password" name="_password" name="_username" class="form-control" placeholder="Mot de passe ..." required>
